<p id="notice"><%= notice %></p>


  <% @pins.each do |pin| %>
    <br>

      <div class="card text-white bg-dark border-light mb-3" style="width: 22rem;">
        <div class="card-header">
          <h2><%= link_to image_tag(pin.image.url(:medium)), pin %></h2>
        </div>
        <div class="card-body">
          <%= pin.description %>
        </div>
        <div class="card-footer">
          <% if pin.user == current_user %>
            <%= link_to 'New Pin', new_pin_path, class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-primary' %>
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
  <% end %>

<br>
<nav aria-label="Page navigation example">
  <ul class="pagination pagination-sm justify-content-center pagination-bg">
    <%= will_paginate @pins, renderer: WillPaginate::ActionView::BootstrapLinkRenderer   %>
  </ul>
</nav>

