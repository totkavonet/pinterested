<br>

<div class="card text-white bg-dark border-light mb-3">
  <div class="card-header ">
    <h2>Description:</h2>
  </div>

  <div class="card-body">

    <div class="form-group">
      <%= image_tag @pin.image.url(:medium) %>
    </div>

    <div class="form-group">
      <%= @pin.description %>
      <br/><%= @pin.user.name %><br/>
    </div>

  </div>

  <div class="card-footer">
    <% if @pin.user == current_user %>
      <%= link_to 'Edit', edit_pin_path(@pin), class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'Back', pins_path, class: "btn btn-secondary" %>
  </div>

</div>
